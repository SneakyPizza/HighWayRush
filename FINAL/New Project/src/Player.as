package src{	import flash.events.Event;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.geom.Point;	import flash.events.KeyboardEvent;	/**	 * ...	 * @author Coen Meijer	 */	public class Player extends MovieClip	{				public var art:MovieClip;		public var healthArt:MovieClip;		public var _rocketgun:RocketGun = new RocketGun;		public var _frontgun:FrontGun = new FrontGun;		public var boostBool:Boolean = false;				public function Player(){			addEventListener(Event.ADDED_TO_STAGE, init);		}				public function init(e:Event):void{			art = new PlayerArt();			addChild(art);						_rocketgun.x = this.x - 25;			_rocketgun.y = this.y - 18;			art.addChild(_rocketgun);						_frontgun.x = this.x + 15;			_frontgun.y = this.y + 10;			addChild(_frontgun);							Main._main.stage.addEventListener(KeyboardEvent.KEY_DOWN, boost);		}				public function boost(e:KeyboardEvent):void{			if (e.keyCode == 81 && boostBool == true) {					Main._main.boost += 14;					boostBool = false;			}		}		public function destroy() {			Main._main.stage.removeEventListener(KeyboardEvent.KEY_DOWN, boost);					}	}}