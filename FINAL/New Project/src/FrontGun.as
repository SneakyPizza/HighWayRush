package src{	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.KeyboardEvent;	/**	 * ...	 * @author Coen Meijer	 */	public class FrontGun extends MovieClip	{				public var art:MovieClip;		public var numBull:int;				public function FrontGun() 		{			art = new FrontGunArt();			addChild(art);						numBull = 3;			Main._main.stage.addEventListener(KeyboardEvent.KEY_DOWN, keyDownShoot);		}				public function keyDownShoot(e:KeyboardEvent):void{		if(numBull > 0){			if (e.keyCode == 87){				var bull:Bullet = new Bullet();				numBull --;				trace(numBull);				Main._main.bullets.push(bull);				Main._main.addChild(bull);									bull.x = this.x  + this.parent.x;				bull.y = this.y + this.parent.y;			}		}	}}}