package src  {	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;	import flash.events.MouseEvent;	import flash.utils.Timer;	import flash.events.TimerEvent;	/**	 * ...	 * @author Coen Meijer	 */	public class RocketGun extends MovieClip	{		private var mousePressed:Boolean;		public var art:MovieClip;		public var aantalBullets:Number = 100;				public function RocketGun(){			art = new GunArt();			addChild(art);			//art.x -= art.width/2;			//art.y -= art.height/2;						Main._main.addEventListener(MouseEvent.MOUSE_DOWN, fireWeapon);			Main._main.addEventListener(MouseEvent.MOUSE_UP, mouseReleased);			this.addEventListener(Event.ENTER_FRAME, gunLoop);		}				public function followTarget ($target:Point):void{			var xdiff:Number = ($target.x - this.x);			var ydiff:Number = ($target.y - this.y);			var radians:Number = Math.atan2(ydiff, xdiff);			var degrees:Number = radians * 180 / Math.PI;							//trace("degrees", degrees);						if (degrees > -15) degrees = -15;			this.rotation = degrees;		}				public function fireWeapon(e:MouseEvent):void {			mousePressed = true;		}		public function mouseReleased(e:MouseEvent):void {			mousePressed = false;		}		public function gunLoop(e:Event):void {			if (mousePressed){				var bull:Bullet = new Bullet();								if(mousePressed = true && aantalBullets > 0){					aantalBullets -= 2;				Main._main.bullets.push(bull);				Main._main.addChild(bull);				bull.rotation = this.rotation;				//var player:MovieClip = this.parent.parent;				bull.x = this.x + this.parent.parent.x + 15;				bull.y = this.y + this.parent.parent.y - 8;				//trace(this.y + this.parent.parent.y);				}			}		}	}}