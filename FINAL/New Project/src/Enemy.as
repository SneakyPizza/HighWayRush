package src{	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;		/**	 * ...	 * @author Coen Meijer	 */	public class Enemy extends MovieClip{		public var art:MovieClip;		public var _life:int;		public  var speed:int;				public function Enemy(){			addEventListener(Event.ADDED_TO_STAGE, init);		}			public function init(e:Event):void {			art = new DroneArt();			addChild(art);							_life = 8;			speed = 8;		}		public function enemyLoop():void {			this.x -= speed;					}		public function dropPowerUp():void {			var PU: Powerup = new Powerup();			Main._main.powerups.push(PU);			Main._main.addChild(PU);			PU.x = this.x;			PU.y = this.y;		}				public function followTarget ($target:Point){			var xdiff:Number = ($target.x - this.x);			var ydiff:Number = ($target.y - this.y);			var radians:Number = Math.atan2(ydiff, xdiff);			var degrees:Number = radians * 180 / Math.PI;					}				public function destroy() {			var explo:Explosion = new Explosion();						if (this.x >= 0) {				Main._main.explosions.push(explo)				Main._main.addChild(explo);				explo.x = this.x;				explo.y = this.y;			}		}	}}