package src{	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.SimpleButton;	import flash.display.MovieClip;	/**	 * ...	 * @author Coen Meijer	 */	public class Startscherm extends MovieClip {				private var startKnop:SimpleButton = new StartButtonArt;		private var howToKnop:SimpleButton = new HowToButtonArt;		private var backButton:SimpleButton = new BackButtonArt;		private var startBackground:MovieClip;					public function Startscherm() {			addEventListener(Event.ADDED_TO_STAGE, init);		}				private function init(e:Event = null) {			startBackground = new StartBackgroundArt();			addChild(startBackground);						addChild(startKnop);			startKnop.x = 1100;			startKnop.y = 500;						addChild(howToKnop);			howToKnop.x = 1100;			howToKnop.y = 650;						startKnop.addEventListener(MouseEvent.CLICK, startGame);				howToKnop.addEventListener(MouseEvent.CLICK, clearStartScherm)		}		private function startGame(e:MouseEvent){			dispatchEvent(new Event("removeStartScherm"));						removeChild(startKnop);			removeChild(howToKnop);			removeChild(startBackground);			startKnop.removeEventListener(MouseEvent.CLICK, startGame);			howToKnop.removeEventListener(MouseEvent.CLICK, clearStartScherm);		}		private function clearStartScherm(e:MouseEvent) {						removeChild(startKnop);			removeChild(howToKnop);			removeChild(startBackground);			startKnop.removeEventListener(MouseEvent.CLICK, startGame);			howToKnop.removeEventListener(MouseEvent.CLICK, howToPage);						howToPage();		}		private function howToPage() {			addChild(backButton);			backButton.x = 1100;			backButton.y = 650;						backButton.addEventListener(MouseEvent.CLICK, backToStart);		}		private function backToStart(e:MouseEvent) {			removeChild(backButton);			backButton.removeEventListener(MouseEvent.CLICK, backToStart);			//VRAGEN OP SCHOOOOL!!!!			init();					}	}}